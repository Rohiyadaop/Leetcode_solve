// User function template for C++

class Solution {
  public:
    void segregate0and1(vector<int> &arr) {
        // code here
        int n = arr.size() ; 
        int oneindex = 0 ; 
        for(int i = 0 ; i<n ; i++){
            if(arr[oneindex] != 1 ){
            oneindex++; 
            }
            if(i>oneindex && arr[i] == 0){
                arr[i] = 1 ; 
                arr[oneindex] = 0;
                oneindex++ ; 
            }
        }
    }
};

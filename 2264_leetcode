#include <string>
#include <algorithm>

class Solution {
public:
    std::string largestGoodInteger(const std::string& num) {
        char prev = 'A';
        int count = 0;
        char maxD = ' '; // 32

        for (char current : num) {
            if (current == prev) {
                count += 1;
            } else {
                count = 1;
            }

            if (count == 3) {
                maxD = std::max(maxD, current);
            }

            prev = current;
        }

        if (maxD == ' ') {
            return "";
        }

        return std::string(3, maxD);
    }
};

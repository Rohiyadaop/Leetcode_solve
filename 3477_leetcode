class Solution {
public:
    int numOfUnplacedFruits(std::vector<int>& fruits, std::vector<int>& baskets) {
        int unplaced = 0;
        std::vector<bool> used(baskets.size(), false);

        for (int fruit : fruits) {
            bool isPlaced = false;
            for (int j = 0; j < baskets.size(); ++j) {
                if (fruit <= baskets[j] && !used[j]) {
                    isPlaced = true;
                    used[j] = true;
                    break;
                }
            }

            if (!isPlaced) {
                ++unplaced;
            }
        }

        return unplaced;
    }
};
